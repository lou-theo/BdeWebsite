{% extends 'base.html.twig' %}

{% block title %}Acceuil - {{ parent() }}{% endblock %}

{% block body %}
    <div style="height: 400px;" class="container_login accueil">
        <div class="acceve">
            <a href="{{ path('future_event') }} " class="divacc"><p class="alert alert-secondary">Evenement a venir au BDE :</p></a>

            {% for event in futureEventList %}
                <ul class="even list-group">

                   <li class="list-group-item"> {{ event.title }} le {{ event.eventDate|date("d/m/Y") }} Ã  {{ event.eventDate|date("H:i")}} </li>

                </ul>
            {% endfor %}

        </div>

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style=" width: 500px ;height: auto">
        <div class="carousel-inner " style=" width: 500px ;height: auto">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset("Image/slide1.jpg") }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset("Image/slide2.jpg") }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset("Image/slide3.jpg") }}" alt="Third slide">
            </div>
        </div>
    </div>
        <div >

            <div class="iframe">
